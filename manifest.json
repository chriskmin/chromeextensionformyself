{
  "manifest_version": 3,
  "name": "Python Chrome Extension",
  "version": "1.0",
  "description": "A sample extension with Python backend",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": ["activeTab", "http://localhost:5000/"]
}
